<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ title }}</title>
    <!-- capture the CSS content as a Nunjucks variable -->
    {% set css %}
      {% include "css/fonts.css" %}
      {% include "css/elements.css" %}
      {% include "css/common.css" %}
      {% if pageTaxonomy == 'home' %}
        {% include "css/components/cards-grid.css" %}
        {% include "css/components/card.css" %}
      {% endif %}
      {% if pageTaxonomy == 'platform' %}
        {% include "css/components/cards-grid.css" %}
        {% include "css/components/card.css" %}
      {% endif %}
      {% if pageTaxonomy == 'content' %}
        {% include "css/components/list.css" %}
      {% endif %}
    {% endset %}
    <!-- feed it through our cssmin filter to minify -->
    <style>
      {{ css | cssmin | safe }}
    </style>
  </head>

  <body>
    <header class="layout">
      <a href="/" class="logo">{% include 'html/logo.html' %}</a>
    </header>

    <main>
      <h1 class="hero {{ heroModifier }}"><span class="layout">{{ pageTitle }}</span></h1>

      <div class="layout">

        {{ content | safe }}

      </div>

    </main>

    <div class="layout">
      <aside>
        {% changelog filePath=page.inputPath %}
      </aside>
    </div>

    <footer>
      <small>© Barnardo’s</small>
    </footer>
  </body>
</html>
